package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import connection.Dbconnection;
import model.Patientdata;

public class Patientdao {

	public static void insertpatient(Patientdata p) {
		// TODO Auto-generated method stub
		try {
		Connection con=Dbconnection.getconnection();
		String sql="insert into patient (pid,pname,pemail,ppassword,paddress,pcontact) values(?,?,?,?,?) ";
		PreparedStatement prt=con.prepareStatement(sql);
		
		prt.setString(1,p.getPname());
		prt.setString(2, p.getPemail());
		prt.setString(3, p.getPpassword());
		prt.setString(4, p.getPaddress());
		prt.setLong(5, p.getPcontact());
		prt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
			
		}
		
	}

}
