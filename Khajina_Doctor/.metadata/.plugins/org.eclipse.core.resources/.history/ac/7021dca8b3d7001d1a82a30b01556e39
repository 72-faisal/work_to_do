package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import connection.Dbconnection;
import model.Patientdata;

public class Patientdao {

	public static void insertpatient(Patientdata p) {
		// TODO Auto-generated method stub
		try {
		Connection con=Dbconnection.getconnection();
		String sql="insert into patient (name,email,password,address,contact) values(?,?,?,?,?) ";
		PreparedStatement prt=con.prepareStatement(sql);
		
		prt.setString(1,p.getName());
		prt.setString(2, p.getEmail());
		prt.setString(3, p.getPassword());
		prt.setString(4, p.getAddress());
		prt.setLong(5, p.getContact());
		prt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
			
		}
		
	}

	public static Patientdata Patientlogin(Patientdata p) {
		Patientdata p1=null;
		try {
			Connection con=Dbconnection.getconnection();
			String sql="select * from patient where email=? and password=? ";
			PreparedStatement prt=con.prepareStatement(sql);
			prt.setString(1, p.getEmail());
			prt.setString(2, p.getPassword());
			ResultSet rs=prt.executeQuery();
			if(rs.next()) {
				p1 = new Patientdata();
				p1.setId(rs.getInt("id"));
				p1.setName(rs.getString("name"));
				p1.setEmail(rs.getString("email"));
				p1.setPassword(rs.getString("password"));
				p1.setAddress(rs.getString("address"));
				p1.setContact(rs.getLong("contact"));
				
				
			}
		
		} catch (Exception e) {
			e.printStackTrace();
		}
		return p1;
	}

	

}
