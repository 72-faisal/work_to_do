package controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import dao.Patientdao;
import model.Patientdata;

/**
 * Servlet implementation class PatientController
 */
@WebServlet("/PatientController")
public class PatientController extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public PatientController() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String action=request.getParameter("action");
		if(action.equalsIgnoreCase("register")) {
			Patientdata p=new Patientdata();
			p.setPname(request.getParameter("pname"));
			p.setPemail(request.getParameter("pemail"));
			p.setPpassword(request.getParameter("ppassword"));
			p.setPaddress(request.getParameter("paddress"));
			p.setPcontact(Long.parseLong(request.getParameter("pcontact")));
			System.out.println(p);
			Patientdao.insertpatient(p);
			response.sendRedirect("Patient_Login.jsp");
			
		}
		else if(action.equalsIgnoreCase("login")) {
			Patientdata p=new Patientdata();
			p.setPemail(request.getParameter("pemail"));
			p.setPaddress(request.getParameter("ppassword"));
			Patientdata p1=Patientdao.Patientlogin(p);
			if(p1== null) {
				
			}
			else {
				HttpSession session = request.getSession();
				session.setAttribute("data", p1);
				request.getRequestDispatcher("Patient-home.jsp").forward(request, response);
			}
		}
	}

}
